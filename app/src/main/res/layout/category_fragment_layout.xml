<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.CategoryFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/category_app_bar_layout"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            style="@style/AppTheme"
            android:background="@color/colorBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <SearchView
                android:id="@+id/category_search_view"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/small_rounded_corners"
                android:backgroundTint="@color/colorEditText"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:queryHint="@string/search"
                android:elevation="10dp"/>

    </com.google.android.material.appbar.AppBarLayout>


    <TextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textColor="@color/colorSecondary"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@color/colorBackground"
            app:layout_constraintTop_toBottomOf="@id/category_app_bar_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/category_swipe_refresh_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_name"
            app:layout_constraintVertical_bias="0.0">

        <GridView
                android:id="@+id/category_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:textDirection="rtl"
                android:gravity="center"
                android:stretchMode="columnWidth"
                android:layoutDirection="rtl" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
