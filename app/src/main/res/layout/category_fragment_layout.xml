<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/category_app_bar_layout"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            style="@style/AppTheme"
            android:background="@color/colorBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.SearchView
                android:id="@+id/category_search_view"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/small_rounded_corners"
                android:backgroundTint="@color/colorEditText"
                app:searchIcon="@drawable/ic_action_search"
                app:searchHintIcon="@drawable/ic_action_search"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                app:closeIcon="@drawable/ic_action_close"
                app:defaultQueryHint="@string/search_hint"
                android:elevation="10dp"/>

    </com.google.android.material.appbar.AppBarLayout>




    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/category_swipe_refresh_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/category_app_bar_layout"
            app:layout_constraintStart_toStartOf="@id/category_app_bar_layout"
            app:layout_constraintTop_toBottomOf="@id/category_app_bar_layout"
            app:layout_constraintVertical_bias="0.0">

        <GridView
                android:id="@+id/category_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2"
                android:horizontalSpacing="4dp"
                android:verticalSpacing="4dp"
                android:textDirection="rtl"
                android:gravity="center"
                android:stretchMode="columnWidth"
                android:layoutDirection="rtl" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
