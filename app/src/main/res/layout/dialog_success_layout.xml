<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:elevation="10dp"
        android:gravity="center">

    <androidx.cardview.widget.CardView
            android:id="@+id/success_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

        <LinearLayout
                android:id="@+id/success_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorBackground">


            <ImageView
                    android:id="@+id/success_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_success"
                    app:tint="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"/>

            <TextView
                    android:id="@+id/success_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textDirection="rtl"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/success_message"
                    android:textSize="12sp"/>

            <Button
                    android:id="@+id/success_positive_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/large_rounded_corners"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/colorBackground"
                    android:text="@string/dialog_positive_button"
                    android:textSize="10sp"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>
