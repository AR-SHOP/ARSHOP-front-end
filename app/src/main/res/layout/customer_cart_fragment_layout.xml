<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.CustomerCartFragment">

    <Button
            android:id="@+id/login_btn"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:layoutDirection="rtl"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="start"
            android:text="ورود یا ثبت نام"
            android:padding="30dp"
            android:textColor="@color/colorBackground"
            android:drawableTint="@color/colorBackground"
            android:textDirection="rtl"
            android:textSize="20sp"
            android:elevation="10dp"
            android:drawableStart="@drawable/ic_login"
            android:drawablePadding="15dp"
            android:drawableEnd="@drawable/ic_action_forward_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
            android:id="@+id/empty_cart_layout"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/login_btn"
            app:layout_constraintStart_toStartOf="@id/login_btn"
            app:layout_constraintTop_toBottomOf="@id/login_btn"
            android:visibility="visible">

        <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_empty_cart"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="سبد خرید شما خالی است."
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cart_items_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="70dp"
            android:layoutDirection="rtl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>



</androidx.constraintlayout.widget.ConstraintLayout>