<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".views.fragments.SignUpPasswordFragment">


    <TextView
            android:id="@+id/enter_code"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="@string/enter_password"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toTopOf="@+id/signup_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.355"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.743" />

    <EditText
            android:id="@+id/signup_password"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_rounded"
            android:hint="@string/pass_hint"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@drawable/cursor"
            android:textDirection="rtl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/enter_code"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/enter_code"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.123" />

    <ImageView
            android:id="@+id/signup_visibility_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/colorEditText"
            android:src="@drawable/ic_action_eye"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintBottom_toBottomOf="@+id/signup_password"
            app:layout_constraintEnd_toEndOf="@id/signup_password"
            app:layout_constraintStart_toStartOf="@+id/signup_password"
            app:layout_constraintTop_toTopOf="@+id/signup_password"
            />


    <EditText
            android:id="@+id/signup_password_repeat"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_rounded"
            android:hint="@string/repeat_password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@drawable/cursor"
            android:textDirection="rtl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/signup_password"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/signup_password"
            app:layout_constraintTop_toBottomOf="@+id/signup_password"
            app:layout_constraintVertical_bias="0.023" />

    <ImageView
            android:id="@+id/repeat_visibility_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/colorEditText"
            android:src="@drawable/ic_action_eye"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintBottom_toBottomOf="@+id/signup_password_repeat"
            app:layout_constraintEnd_toEndOf="@id/signup_password_repeat"
            app:layout_constraintStart_toStartOf="@+id/signup_password_repeat"
            app:layout_constraintTop_toTopOf="@+id/signup_password_repeat"
            />


    <Button
            android:id="@+id/confirm_password_btn"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_rounded"
            android:text="@string/confirm_password"
            android:textColor="@color/colorBackgroud"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/signup_password_repeat"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/signup_password_repeat"
            app:layout_constraintTop_toBottomOf="@+id/signup_password_repeat"
            app:layout_constraintVertical_bias="0.938" />



</androidx.constraintlayout.widget.ConstraintLayout>