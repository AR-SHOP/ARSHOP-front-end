<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.ProductFragment">

    <ImageView
            android:id="@+id/product_details_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    
    
    <LinearLayout
            android:id="@+id/details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/product_details_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <TextView
                android:id="@+id/product_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:layout_weight="2"
                android:text="نام"
                android:textColor="@color/colorBackground"
                android:textAlignment="viewStart"
                android:textDirection="rtl"
                android:textSize="30sp" />

        <TextView
                android:id="@+id/product_details_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:text="سازنده محصول"
                android:textColor="@color/colorBackground"
                android:textSize="15sp"/>


        <TextView
                android:id="@+id/product_details_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="قیمت"
                android:textAlignment="viewEnd"
                android:textDirection="rtl"
                android:textSize="18sp"
                android:textColor="@color/colorBackground"/>


    </LinearLayout>
    
    <TextView
            android:id="@+id/product_details_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="توضیحات"
            android:textSize="15sp"
            android:padding="20dp"
            android:textColor="@color/colorSecondary"
            app:layout_constraintTop_toBottomOf="@id/details"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_details_description"
            app:layout_constraintVertical_bias="1.0">

        <Button
                android:id="@+id/ar_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/colorBackground"
                android:elevation="10dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="@string/ar_view_btn"
                android:textSize="12dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimary" />

        <Button
                android:id="@+id/add_to_cart_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/colorBackground"
                android:layout_weight="1"
                android:elevation="10dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:text="@string/add_to_cart"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                android:visibility="invisible"/>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/inc_dec_cart_count"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:textDirection="rtl"
            android:visibility="visible"
            android:layout_marginRight="250dp"
            app:layout_constraintBottom_toBottomOf="@id/buttons"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/buttons"
            app:layout_constraintRight_toRightOf="@id/buttons"
            app:layout_constraintTop_toTopOf="@id/buttons">

        <ImageButton
                android:id="@+id/plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:src="@drawable/ic_plus"
                android:tint="@color/colorBackground" />

        <TextView
                android:id="@+id/cart_count_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/colorBackground" />

        <ImageButton
                android:id="@+id/minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:src="@drawable/ic_minus"
                android:tint="@color/colorBackground" />

        <ImageButton
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:src="@drawable/ic_delete"
                android:tint="@color/colorBackground" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>