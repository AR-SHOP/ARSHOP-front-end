<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_fragment_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.ProductFragment"
        style="@style/AppTheme"
        android:layoutDirection="rtl"
        android:textDirection="rtl">

    <ScrollView
            android:id="@+id/product_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttons"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/product_scrollable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/product_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="10dp"
                    android:translationZ="30dp"
                    android:backgroundTint="@color/colorBackground"
                    android:background="@drawable/small_rounded_corners"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                    android:id="@+id/product_details_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_toolbar" />


            <LinearLayout
                    android:id="@+id/details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textDirection="rtl"
                    android:layoutDirection="rtl"
                    android:padding="10dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/product_details_image"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                <TextView
                        android:id="@+id/product_details_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:layout_weight="2"
                        android:text="@string/name"
                        android:layout_gravity="start"
                        android:textColor="@color/colorBackground"
                        android:textAlignment="viewStart"
                        android:textDirection="rtl"
                        android:textSize="20sp" />
                <TextView
                        android:id="@+id/product_details_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layoutDirection="rtl"
                        android:text="@string/brand"
                        android:layout_gravity="start"
                        android:textColor="@color/colorBackground"
                        android:textSize="15sp"/>


                <TextView
                        android:id="@+id/product_details_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:layout_weight="1"
                        android:text="@string/price"
                        android:layout_gravity="end"
                        android:textAlignment="viewEnd"
                        android:textDirection="rtl"
                        android:textSize="12sp"
                        android:textColor="@color/colorBackground"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/product_details_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/product_attributes"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_suggestion"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorSecondary"
                    android:textAlignment="viewStart"
                    android:background="@color/colorEditText"
                    android:textColor="@color/colorSecondary"
                    app:layout_constraintTop_toBottomOf="@id/details"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                    android:id="@+id/product_details_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/product_attributes"
                    android:textSize="12sp"
                    android:padding="20dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/product_details_title"
                    app:layout_constraintRight_toRightOf="@id/product_details_title"
                    app:layout_constraintLeft_toLeftOf="@id/product_details_title"/>

            <LinearLayout
                    android:id="@+id/user_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/product_details_description"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                <LinearLayout
                        android:id="@+id/comments_info_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorEditText">

                    <TextView
                            android:id="@+id/comments_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/user_comments"
                            android:textSize="16sp"
                            android:padding="10dp"
                            android:layout_gravity="start"
                            android:drawableStart="@drawable/ic_comment_outlined"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/colorSecondary"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorSecondary"/>

                    <TextView
                            android:id="@+id/comments_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/sample_comments_count"
                            android:textSize="16sp"
                            android:padding="10dp"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorSecondary"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/user_comments_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        android:background="@color/colorBackground"/>

                <TextView
                        android:id="@+id/comment_confirm_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="10dp"
                        android:background="@drawable/medium_rounded_corners"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableStart="@drawable/ic_comment_outlined"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/colorBackground"
                        android:padding="15dp"
                        android:text="@string/send_comment"
                        android:textColor="@color/colorBackground" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:elevation="10dp"
            android:translationZ="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="1.0">

        <Button
                android:id="@+id/ar_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/medium_rounded_corners"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="10dp"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:layout_gravity="center"
                android:text="@string/ar_page"
                android:textSize="12sp"
                android:textColor="@color/colorBackground" />

        <Button
                android:id="@+id/add_to_cart_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/medium_rounded_corners"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1"
                android:elevation="10dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:text="@string/add_to_cart"
                android:textSize="12sp"
                android:textColor="@color/colorBackground"
                android:visibility="invisible"/>




    </LinearLayout>

    <LinearLayout
            android:id="@+id/inc_dec_cart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:textDirection="rtl"
            android:elevation="10dp"
            android:translationZ="30dp"
            android:visibility="visible"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/buttons"
            app:layout_constraintRight_toRightOf="@id/buttons"
            app:layout_constraintLeft_toLeftOf="@id/buttons"
            app:layout_constraintBottom_toBottomOf="@id/buttons"
            app:layout_constraintHorizontal_bias="0.1">

        <ImageButton
                android:id="@+id/plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorBackground"
                android:src="@drawable/ic_plus"
                android:tint="@color/colorPrimary"
                android:padding="5dp"/>

        <TextView
                android:id="@+id/cart_count_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/sample_count"
                android:textColor="@color/colorPrimary" />

        <ImageButton
                android:id="@+id/minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorBackground"
                android:src="@drawable/ic_minus"
                android:padding="5dp"
                android:tint="@color/colorPrimary" />

        <ImageButton
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorBackground"
                android:src="@drawable/ic_delete"
                android:padding="5dp"
                android:tint="@color/colorError" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>